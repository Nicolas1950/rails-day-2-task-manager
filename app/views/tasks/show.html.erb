<h1><%= @task.title%></h1>
<h2><%= @task.details %></h2>
<h2>this task is <%= @task.completed ? 'done': 'not done' %></h2>
<%= link_to "back to list", tasks_path %>
<%= link_to "Update", edit_task_path %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
